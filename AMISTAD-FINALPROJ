#include <iostream>

using namespace std;

int main() {
    double num1, num2;
    int choice;

    cout << "Enter two numbers: ";
    cin >> num1 >> num2;

    cout << "1. Add\n2. Subtract\n3. Multiply\n4. Divide\n";
    cin >> choice;

    if (choice == 1) {
        cout << "Result: " << (num1 + num2) << endl;
    } else if (choice == 2) {
        cout << "Result: " << (num1 - num2) << endl;
    } else if (choice == 3) {
        cout << "Result: " << (num1 * num2) << endl;
    } else if (choice == 4) {
        if (num2 != 0) {
            cout << "Result: " << (num1 / num2) << endl;
        } else {
            cout << "Error: Can't divide by zero." << endl;
        }
    } else {
        cout << "Invalid choice!" << endl;
    }

    return 0;
}
